@model ArtigoUnity.Web.Mvc.Models.LivroModelCadastro

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</head>
    <body class="container">
    
        <div class="well">
    
            @using (Html.BeginForm("CadastrarLivro", "Livro", FormMethod.Post, new { @enctype="multipart/form-data"}))
            {
                @Html.AntiForgeryToken()
        
                <div class="form-horizontal">
                    <h4>LivroModelCadastro</h4>
                    <hr />
                    @Html.ValidationSummary(false)
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.Titulo, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Titulo)
                            @Html.ValidationMessageFor(model => model.Titulo)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Autor, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Autor)
                            @Html.ValidationMessageFor(model => model.Autor)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Sinopse, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Sinopse)
                            @Html.ValidationMessageFor(model => model.Sinopse)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Genero, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Genero)
                            @Html.ValidationMessageFor(model => model.Genero)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Isbn, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Isbn)
                            @Html.ValidationMessageFor(model => model.Isbn)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
    
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </body>
</html>
